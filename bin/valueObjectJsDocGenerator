#!/usr/bin/env php
<?php
/**
 * Генератор JSDoc опсиания для ValueObject в той же папке, где и сам файл
 */
namespace ValueObjectJsDocGenerator {
	function includeIfExists($file)
	{
		if (file_exists($file)) {
			return include $file;
		}
	}

	if ((!$loader = includeIfExists(__DIR__.'/../vendor/autoload.php')) && (!$loader = includeIfExists(__DIR__.'/../../../autoload.php'))) {
		$msg = 'You must set up the project dependencies, run the following commands:'.PHP_EOL.
			'curl -sS https://getcomposer.org/installer | php'.PHP_EOL.
			'php composer.phar install'.PHP_EOL;
		fwrite(STDERR, $msg);
		exit(1);
	}

	use ArtSkills\ValueObject\ValueObjectDocumentation;

	if ($_SERVER['argc'] !== 2) {
		echo 'Usage: valueObjectJsDocGenerator file'.PHP_EOL;
		exit(0);
	}

	ValueObjectDocumentation::build($_SERVER['argv'][1]);
}